<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.moneymanager">

    <!--Android < 10-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--Android > 10-->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.MoneyManager">
        <activity android:name=".activities.NavigatorActivity" android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activities.FirstLoadingActivity" android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".activities.SignupActivity" android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".activities.SigninActivity" android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".activities.SetMoneyActivity" android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".activities.WalletActivity" android:theme="@style/Theme.MaterialComponents.NoActionBar"/>
        <activity android:name=".activities.WalletFilterActivity" android:theme="@style/Theme.MaterialComponents.NoActionBar"/>
        <activity android:name=".activities.WalletFilterChooseMoneyRangeActivity" android:theme="@style/Theme.MaterialComponents.NoActionBar"/>
        <activity android:name=".activities.WalletFilterChooseTimeRangeActivity" android:theme="@style/Theme.MaterialComponents.NoActionBar"/>
        <activity android:name=".activities.StatisticActivity" android:theme="@style/Theme.MaterialComponents.NoActionBar"/>
        <activity android:name=".activities.PlanActivity" android:theme="@style/Theme.MaterialComponents.NoActionBar"/>
        <activity android:name=".activities.AccountActivity" android:theme="@style/Theme.MaterialComponents.NoActionBar"/>
        <activity android:name=".activities.AccountMyWalletActivity" android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".activities.AccountToolsActivity" android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".activities.AccountSettingsActivity" android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".activities.AccountSettingsReportActivity" android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".activities.AccountAboutUsActivity" android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".activities.AddTransactionActivity" android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".activities.AddTransactionCategoryActivity" android:theme="@style/Theme.AppCompat.NoActionBar"/>

    </application>

</manifest>